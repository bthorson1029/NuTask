

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

<h2>Edit <%= resource_name.to_s.humanize %></h2>
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Current Email", input_html: {class: "form-control"} %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: "Leave this area blank if you don't want to change anything", required: false, label: false, placeholder: "New Password", input_html: {class: "form-control"} %>
    <%= f.input :password_confirmation, required: false, label: false, placeholder: "Confirm new password", input_html: {class: "form-control"} %>
    <%= f.input :current_password, hint: "For your security, enter your current password to confirm your changes", required: true, label: false, placeholder: "Current Password", input_html: {class: "form-control"} %>

    <%= f.button :submit, "Update", class: "btn btn-primary", style: "float: right" %>

<br>
<h3>Danger Zone</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>

<% end %>


